{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tauri Vue Template",
  "version": "1.0.0",
  "identifier": "com.example.tauri-vue-template",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximizable": false,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "shadow": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost http://localhost:8098 ws://localhost:8098",
        "font-src": "'self'",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self'",
        "script-src": "'self' 'unsafe-inline' http://localhost:8098"
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
