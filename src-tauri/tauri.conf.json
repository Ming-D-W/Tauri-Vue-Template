{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Warp Pilot",
  "version": "1.0.0",
  "identifier": "com.example.warp-pilot",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Warp Pilot",
        "width": 800,
        "height": 600,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "shadow": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": "'self'",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

