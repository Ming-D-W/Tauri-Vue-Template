{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri:dev"],
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri:build"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo check",
      "type": "shell",
      "command": "cargo",
      "args": ["check", "--manifest-path", "src-tauri/Cargo.toml"],
      "problemMatcher": ["$rustc"]
    }
  ]
}

